<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Activity w/o action bar theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorActivatedControls</item>
    <item name="colorControlNormal">@color/colorBaseControls</item>
  </style>

  <!-- AuthActivity w/o action bar theme -->
  <style name="AuthAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorActivatedControls</item>
    <item name="colorControlNormal">@color/colorBaseControls</item>
  </style>

  <!-- Activity w/ action bar theme -->
  <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorActivatedControls</item>
    <item name="colorControlNormal">@color/colorBaseControls</item>
    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    <item name="actionBarStyle">@style/ActionBarTheme</item>
  </style>

  <!-- ActionBar theme -->
  <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
    <item name="android:icon">@drawable/ic_launcher</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
  </style>

  <!-- ActionBar title style -->
  <style name="Theme.MyAuthTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/colorActionBarText</item>
  </style>

  <!-- Borderless button style -->
  <style name="BorderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:textColor">@color/colorBaseControls</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <!-- Borderless EditText for number -->
  <style name="BorderlessEditText">
    <item name="android:background">@android:color/transparent</item>
    <item name="background">@android:color/transparent</item>
    <item name="android:cursorVisible">false</item>
    <item name="android:focusable">false</item>
    <item name="android:editable">false</item>
    <item name="colorControlNormal">@android:color/transparent</item>
    <item name="colorAccent">@android:color/transparent</item>
    <item name="colorControlActivated">@android:color/transparent</item>
  </style>
  
  <!-- Numeric keyboard style -->
  <style name="KeyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/text_numeric_keyboard</item>
    <item name="android:textColor">@color/colorBaseControls</item>
    <item name="android:layout_margin">@dimen/fragment_keypad_key_spacing</item>
  </style>
  
  <!-- Content toolbar theme -->
  <style name="ToolbarTheme" parent="@style/Widget.AppCompat.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
  </style>

  <!-- Tab theme -->
  <style name="ContentTabLayoutTheme" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/colorTabIndicator</item>
    <item name="tabIndicatorHeight">@dimen/content_activity_tab_indicator_size</item>
    <item name="tabPaddingStart">@dimen/content_activity_tab_text_padding</item>
    <item name="tabPaddingEnd">@dimen/content_activity_tab_text_padding</item>
    <item name="tabBackground">@color/colorPrimary</item>
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">@color/colorActionBarText</item>
  </style>
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/content_activity_tab_text_size</item>
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="textAllCaps">true</item>
  </style>
  
  <!-- Text styles -->
  <!-- Auth activity small label -->
  <style name="AuthLabelText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Auth activity large label -->
  <style name="AuthLargeLabelText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- SelectAccount list item text -->
  <style name="AccountItemText">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Keypad caller id label -->
  <style name="CallerIdLabelText">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>
</resources>
