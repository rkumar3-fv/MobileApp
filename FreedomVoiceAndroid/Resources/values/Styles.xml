<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Activity w/o action bar theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorActivatedControls</item>
    <item name="colorControlNormal">@color/colorBaseControls</item>
  </style>

  <!-- AuthActivity w/o action bar theme -->
  <style name="AuthAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorAuthHeader</item>
    <item name="android:windowBackground">@drawable/background</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorFieldsNormal</item>
  </style>

  <!-- Activity w/ action bar theme -->
  <style name="AppThemeActionBar" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorDivider</item>
    <item name="colorControlNormal">@color/colorDivider</item>
    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    <item name="actionBarStyle">@style/ActionBarTheme</item>
  </style>

  <!-- ActionBar theme -->
  <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
    <item name="android:icon">@drawable/ic_launcher</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
  </style>

  <!-- ActionBar title style -->
  <style name="Theme.MyAuthTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textSize">@dimen/toolbar_text</item>
  </style>
  
  <!-- Scrollbar style -->
  <style name="ScrollTheme" >
    <item name="android:scrollbarSize">@dimen/activity_scroll_width</item>
    <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarStyle">insideOverlay</item>
  </style>

  <!-- AuthActivity edit fields style -->
  <style name="AuthEditTextStyle">
    <item name="android:maxLength">64</item>
    <item name="android:textSize">@dimen/auth_activity_edit_text_size</item>
    <item name="android:textColor">@color/colorFieldsActive</item>
    <item name="android:textColorHint">@color/colorFieldsHint</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:maxHeight">@dimen/auth_activity_field_height_max</item>
  </style>

  <!-- RestoreActivity edit fields style -->
  <style name="RestoreEditTextStyle">
    <item name="android:maxLength">64</item>
    <item name="android:textSize">@dimen/auth_activity_edit_text_size</item>
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textColorHint">@color/colorBlackFieldsHint</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:maxHeight">@dimen/auth_activity_field_height_max</item>
  </style>
  
  <!-- Borderless restore button style -->
  <style name="BorderlessRestoreButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/activity_button_text</item>
    <item name="android:textColor">@color/textForgotPassword</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:minHeight">@dimen/activity_button_size</item>
  </style>

  <!-- Borderless message ations button style -->
  <style name="BorderlessMessagesButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:minHeight">@dimen/activity_button_size</item>
  </style>

  <!-- Borderless dialog button style -->
  <style name="BorderlessDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/dlg_action_bar_font</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:minHeight">@dimen/dlg_action_bar_button</item>
  </style>
  
  <!-- AppButtonStyle -->
  <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/button_selector</item>
    <item name="android:elevation">@dimen/activity_button_elevation</item>
    <item name="android:textSize">@dimen/activity_button_text</item>
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textAlignment">center</item>
    <item name="android:minHeight">@dimen/activity_button_size</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Borderless EditText for number -->
  <style name="BorderlessEditText">
    <item name="android:background">@android:color/transparent</item>
    <item name="background">@android:color/transparent</item>
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/fragment_keypad_number_size</item>
    <item name="android:cursorVisible">false</item>
    <item name="android:focusable">false</item>
    <item name="android:editable">false</item>
    <item name="colorControlNormal">@android:color/transparent</item>
    <item name="colorAccent">@android:color/transparent</item>
    <item name="colorControlActivated">@android:color/transparent</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
  </style>
  
  <!-- Numeric keyboard style -->
  <style name="KeyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/fragment_keypad_key_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardMain</item>
  </style>
  
  <!-- Content toolbar theme -->
  <style name="ToolbarTheme" parent="@style/Widget.AppCompat.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
  </style>

  <!-- Tab theme -->
  <style name="ContentTabLayoutTheme" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/colorTabIndicator</item>
    <item name="tabIndicatorHeight">@dimen/content_activity_tab_indicator_size</item>
    <item name="tabPaddingStart">@dimen/content_activity_tab_text_padding</item>
    <item name="tabPaddingEnd">@dimen/content_activity_tab_text_padding</item>
    <item name="tabBackground">@color/colorPrimary</item>
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">@color/colorTabIndicator</item>
  </style>
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/content_activity_tab_text_size</item>
    <item name="android:textColor">@color/colorTabIndicatorInactive</item>
    <item name="textAllCaps">true</item>
  </style>
  
  <!-- Text styles -->
  <!-- Auth activity error label -->
  <style name="AuthErrorLabelText">
    <item name="android:textColor">@color/textColorError</item>
    <item name="android:textSize">@dimen/auth_activity_error_text_size</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Auth activity large label -->
  <style name="AuthLargeLabelText">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textSize">@dimen/auth_activity_auth_title_text</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List item main text -->
  <style name="ListItemText">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List item secondary text -->
  <style name="ListItemSecondaryText">
    <item name="android:textColor">@color/messageIndicatorText</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Message indicator text -->
  <style name="MessagesCounterText">
    <item name="android:textColor">@color/messageIndicatorText</item>
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Keypad caller id spinner -->
  <style name="CallerIdSpinnerText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Dialog title text -->
  <style name="DlgTitleText">
    <item name="android:textColor">@color/colorDlgTitle</item>
    <item name="android:textSize">@dimen/dlg_title_font</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Dialog content text -->
  <style name="DlgContentText">
    <item name="android:textColor">@color/colorDlgContent</item>
    <item name="android:textSize">@dimen/dlg_content_font</item>
  </style>

  <!-- Numeric keyboard main text style -->
  <style name="KeyButtonTextMainStyle">
    <item name="android:textSize">@dimen/fragment_keypad_key_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardMain</item>
  </style>
  
  <!-- Numeric keyboard secondary text style -->
  <style name="KeyButtonTextSecondaryStyle">
    <item name="android:textSize">@dimen/fragment_keypad_key_small_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardSecondary</item>
  </style>
  
  <!-- Message recipient text style -->
  <style name="MsgDetailsSenderText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_big</item>
    <item name="android:lines">1</item>
  </style>
</resources>
