<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="background">@drawable/background</item>
  </style>
  
  <!-- Activity w/o action bar theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorBaseControls</item>
    <item name="colorControlActivated">@color/colorSpinnerSelector</item>
    <item name="colorControlNormal">@color/colorSpinnerSelector</item>
    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    <item name="actionBarStyle">@style/ActionBarTheme</item>
    <item name="searchViewStyle">@style/AppSearchViewStyle</item>
    <item name="android:searchViewStyle">@style/AppSearchViewStyle</item>
    <item name="android:textSelectHandleLeft">@drawable/sel_white_left</item>
    <item name="android:textSelectHandleRight">@drawable/sel_white_right</item>
    <item name="android:textSelectHandle">@drawable/sel_white_straight</item>
  </style>

  <!-- AuthActivity w/o action bar theme -->
  <style name="AuthAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorAuthHeader</item>
    <item name="android:windowBackground">@drawable/background</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorFieldsNormal</item>
    <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
    <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
    <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
    <item name="android:textSelectHandleLeft">@drawable/sel_white_left</item>
    <item name="android:textSelectHandleRight">@drawable/sel_white_right</item>
    <item name="android:textSelectHandle">@drawable/sel_white_straight</item>
  </style>

  <!-- Activity w/ action bar theme -->
  <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorDivider</item>
    <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    <item name="actionBarStyle">@style/ActionBarTheme</item>
    <item name="android:editTextBackground">@drawable/fvapptheme_edit_text</item>
    <item name="android:textSelectHandleLeft">@drawable/sel_black_left</item>
    <item name="android:textSelectHandleRight">@drawable/sel_black_right</item>
    <item name="android:textSelectHandle">@drawable/sel_black_straight</item>
  </style>

  <!-- Content toolbar theme -->
  <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
    <item name="android:actionOverflowButtonStyle">@style/CustomButtonOverflow</item>
    <item name="actionOverflowButtonStyle">@style/CustomButtonOverflow</item>
    <item name="android:popupBackground">@color/colorBackground</item>
    <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorFieldsNormal</item>
  </style>

  <!-- ActionBar theme -->
  <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:displayOptions">showHome|showTitle</item>
    <item name="displayOptions">showHome|showTitle</item>
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/Theme.MyAuthTheme.ActionBar.TitleTextStyle</item>
    <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
    <item name="android:actionOverflowButtonStyle">@style/CustomButtonOverflow</item>
    <item name="actionOverflowButtonStyle">@style/CustomButtonOverflow</item>
    <item name="android:popupBackground">@color/colorBackground</item>
    <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorFieldsNormal</item>
  </style>

  <style name="CustomButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_action_more</item>
  </style>

  <!-- OverFlow menu Styles -->
  <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
    <item name="android:background">@color/colorBackground</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="android:popupBackground">@color/colorBackground</item>
  </style>

  <!-- ActionBar title style -->
  <style name="Theme.MyAuthTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textSize">@dimen/toolbar_text</item>
  </style>

  <!-- SearchView style-->
  <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
    <item name="queryHint">@string/FragmentContacts_hint</item>
    <item name="closeIcon">@drawable/ic_action_close</item>
    <item name="searchIcon">@drawable/ic_action_search</item>
    <item name="goIcon">@drawable/ic_action_search</item>
    <item name="colorAccent">@color/colorFieldsNormal</item>
    <item name="colorControlActivated">@color/colorFieldsActive</item>
    <item name="colorControlNormal">@color/colorFieldsNormal</item>
    <!--<item name="voiceIcon"></item>-->
  </style>
  
  <!-- Scrollbar style -->
  <style name="ScrollTheme" >
    <item name="android:scrollbarSize">@dimen/activity_scroll_width</item>
    <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarStyle">insideOverlay</item>
  </style>

  <!-- AuthActivity edit fields style -->
  <style name="AuthEditTextStyle">
    <item name="android:maxLength">64</item>
    <item name="android:textSize">@dimen/auth_activity_edit_text_size</item>
    <item name="android:textColor">@color/colorFieldsActive</item>
    <item name="android:textColorHint">@color/colorFieldsHint</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:maxHeight">@dimen/auth_activity_field_height_max</item>
    <item name="android:textCursorDrawable">@drawable/cursor_white</item>
  </style>

  <!-- RestoreActivity edit fields style -->
  <style name="RestoreEditTextStyle">
    <item name="android:maxLength">64</item>
    <item name="android:textSize">@dimen/auth_activity_edit_text_size</item>
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textColorHint">@color/colorBlackFieldsHint</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:maxHeight">@dimen/auth_activity_field_height_max</item>
    <item name="android:textCursorDrawable">@drawable/cursor_black</item>
    <item name="android:background">@drawable/fvapptheme_edit_text</item>
  </style>
  
  <!-- Borderless restore button style -->
  <style name="BorderlessRestoreButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/activity_button_text</item>
    <item name="android:textColor">@color/textForgotPassword</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:minHeight">@dimen/activity_button_size</item>
  </style>

  <!-- Borderless message ations button style -->
  <style name="BorderlessMessagesButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:maxHeight">@dimen/details_activity_actions_height</item>
    <item name="android:minHeight">@dimen/details_activity_actions_height</item>
  </style>

  <!-- Borderless message ations button style -->
  <style name="BorderlessMessagesToggleButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:maxHeight">@dimen/details_activity_actions_toggle_height</item>
    <item name="android:minHeight">@dimen/details_activity_actions_toggle_height</item>
    <item name="android:background">@drawable/toggle_selector</item>
    <item name="android:elevation">0dp</item>
  </style>

  <!-- Borderless dialog button style -->
  <style name="BorderlessDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/dlg_action_bar_font</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:minHeight">@dimen/dlg_action_bar_button</item>
    <item name="android:maxHeight">@dimen/dlg_action_bar_button</item>
    <item name="android:minWidth">@dimen/dlg_action_bar_button_width</item>
  </style>

  <!-- Borderless EditText for number -->
  <style name="BorderlessEditText">
    <item name="android:background">@android:color/transparent</item>
    <item name="background">@android:color/transparent</item>
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/fragment_keypad_number_text_size</item>
    <item name="colorControlNormal">@android:color/transparent</item>
    <item name="colorAccent">@android:color/transparent</item>
    <item name="colorControlActivated">@android:color/transparent</item>
    <item name="android:lines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>
  
  <!-- Numeric keyboard style -->
  <style name="KeyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/fragment_keypad_key_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardMain</item>
  </style>

  <!-- In-button progress bars -->
  <style name="InButtonProgressBar" parent="Widget.AppCompat.ProgressBar">
    <item name="android:indeterminate">true</item>
    <item name="android:indeterminateTint">@color/colorProgressWhite</item>
    <item name="android:indeterminateTintMode">src_in</item>
    <item name="android:maxWidth">@dimen/activity_progress</item>
    <item name="android:maxHeight">@dimen/activity_progress</item>
  </style>

  <style name="InWhiteButtonProgressBar" parent="Widget.AppCompat.ProgressBar">
    <item name="android:indeterminate">true</item>
    <item name="android:indeterminateTint">@color/colorProgressBlue</item>
    <item name="android:indeterminateTintMode">src_in</item>
    <item name="android:maxWidth">@dimen/activity_progress</item>
    <item name="android:maxHeight">@dimen/activity_progress</item>
  </style>
  
  <style name="OrangeHorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:indeterminate">true</item>
    <item name="android:minHeight">@dimen/details_activity_progress_size</item>
    <item name="android:maxHeight">@dimen/details_activity_progress_size</item>
    <item name="android:progressDrawable">@color/colorProgressBackground</item>
    <item name="android:indeterminateTint">@color/colorProgressOrange</item>
    <item name="android:indeterminateTintMode">src_in</item>
  </style>
  
  <style name="MenuTextAppearance">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:background">@color/colorTransparent</item>
  </style>

  <!-- Tab theme -->
  <style name="ContentTabLayoutTheme" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/colorTabIndicator</item>
    <item name="tabIndicatorHeight">@dimen/content_activity_tab_indicator_size</item>
    <item name="tabPaddingStart">@dimen/content_activity_tab_text_padding</item>
    <item name="tabPaddingEnd">@dimen/content_activity_tab_text_padding</item>
    <item name="tabBackground">@color/colorPrimary</item>
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">@color/colorTabIndicator</item>
  </style>
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/content_activity_tab_text_size</item>
    <item name="android:textColor">@color/colorTabIndicatorInactive</item>
    <item name="textAllCaps">true</item>
  </style>
  
  <!-- Text styles -->
  <!-- Activity error label -->
  <style name="ErrorLabelText">
    <item name="android:textColor">@color/textColorError</item>
    <item name="android:textSize">@dimen/auth_activity_error_text_size</item>
    <item name="android:background">@color/textColorErrorBack</item>
    <item name="android:gravity">center</item>
    <item name="android:lines">1</item>
  </style>

  <style name="DarkErrorLabelText">
    <item name="android:textColor">@color/textColorErrorDark</item>
    <item name="android:textSize">@dimen/auth_activity_error_text_size</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Auth activity large label -->
  <style name="AuthLargeLabelText">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textSize">@dimen/auth_activity_auth_title_text</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List background text -->
  <style name="ListBackgroundText">
    <item name="android:textColor">@color/colorDlgContent</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List item main text -->
  <style name="ListItemText">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List item date text -->
  <style name="ListItemDateText">
    <item name="android:textColor">@color/messageIndicatorText</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- List item secondary text -->
  <style name="ListItemSecondaryText">
    <item name="android:textColor">@color/messageIndicatorText</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Message indicator text -->
  <style name="MessagesCounterText">
    <item name="android:textColor">@color/messageIndicatorText</item>
    <item name="android:textSize">@dimen/text_secondary</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Keypad caller id spinner -->
  <style name="CallerIdSpinnerText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_main</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Dialog title text -->
  <style name="DlgTitleText">
    <item name="android:textColor">@color/colorDlgTitle</item>
    <item name="android:textSize">@dimen/dlg_title_font</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Dialog content text -->
  <style name="DlgContentText">
    <item name="android:textColor">@color/colorDlgContent</item>
    <item name="android:textSize">@dimen/dlg_content_font</item>
  </style>

  <!-- Numeric keyboard main text style -->
  <style name="KeyButtonTextMainStyle">
    <item name="android:textSize">@dimen/fragment_keypad_key_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardMain</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:layout_marginBottom">-4dp</item>
  </style>
  
  <!-- Numeric keyboard secondary text style -->
  <style name="KeyButtonTextSecondaryStyle">
    <item name="android:textSize">@dimen/fragment_keypad_key_small_text_size</item>
    <item name="android:textColor">@color/colorKeyOnKeyboardSecondary</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:includeFontPadding">false</item>
  </style>
  
  <!-- Message recipient text style -->
  <style name="MsgDetailsSenderText">
    <item name="android:textColor">@color/textColorSecondary</item>
    <item name="android:textSize">@dimen/text_big</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Main button text style-->
  <style name="AppButtonTextStyle">
    <item name="android:textSize">@dimen/activity_button_text</item>
    <item name="android:textColor">@color/colorActionBarText</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
  </style>
  
  <style name="WhiteAppButtonTextStyle">
    <item name="android:textSize">@dimen/activity_button_text</item>
    <item name="android:textColor">@color/colorDlgButton</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAllCaps">true</item>
  </style>
  
  <style name="ConversationMessageEt">
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:maxLines">5</item>
    <item name="android:background">@null</item>
    <item name="android:inputType">text</item>
  </style>
</resources>
